  box-sizing: border-box;
}

body {
  padding: 0;
  margin: 0;
}

.header {
  background-color: #81d4fa;
  height: 15vh;
  min-height: 7rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-textbox {
  height: 100%;
  display: block;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header-text {
  color: #e0e0e0;
  margin: 0;
  text-align: center;
  font-size: 5rem;
}

.quiz-game {
  height: 85vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.question-number-textbox {
  margin: 2rem;
  display: block;
  position: absolute;
  top: 15%;
  height: 7rem;
  width: 7rem;
  border-radius: 50%;
  background-color: #81c784;
}

.question-number {
  margin: 0rem;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 4rem;
}

.question-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  width: 100vw;
  height: 10rem;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.number {
  font-size: 8rem;
  margin: 0rem;
}

.answer-field {
  font-size: 8rem;
  width: 20vw;
}

.timer {
  position: absolute;
  top: 70%;
  align-items: center;
  font-size: 6rem;
  font-weight: bold;
}

